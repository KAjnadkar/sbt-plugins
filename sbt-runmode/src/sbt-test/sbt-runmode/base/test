> update-run-mode

# Check that jetty-web.xml does not exist:
-$ exists src/main/webapp/WEB-INF/jetty-web.xml

> set RunModeKeys.runMode in Compile := Some("development")
> update-run-mode

# Check that jetty-web.xml contains the right run.mode:
$ exists   src/main/webapp/WEB-INF/jetty-web.xml
> contents src/main/webapp/WEB-INF/jetty-web.xml fixtures/development.jetty-web.xml

> set RunModeKeys.runMode in Compile := Some("pilot")
> update-run-mode

# Check that jetty-web.xml contains the right run.mode:
$ exists   src/main/webapp/WEB-INF/jetty-web.xml
> contents src/main/webapp/WEB-INF/jetty-web.xml fixtures/pilot.jetty-web.xml

> set RunModeKeys.runMode in Compile := None
> update-run-mode

# Check that jetty-web.xml does not exist:
-$ exists src/main/webapp/WEB-INF/jetty-web.xml
